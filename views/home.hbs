<div class="card-deck">

    {{#each posts}}
    <div class="card m-4" style="width: 18rem;">
        <!-- Card Heading -->
        <img src="{{this.image}}" class="card-img-top">

        <div class="card-body">
            <!-- Card Text -->
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{post.description}}</p>

            <!-- Comments Listing-->
            {{#if this.comments}} <!-- check if comment array is not null (true) -->
            <ul class="list-group">
                {{#each this.comments}}
                <li class="list-group-item">{{this}}</li>
                {{/each}}
            </ul>
            {{else}}
            <ul class="list-group">
                <li class="list-group-item">Be the first one to comment!</li>
            </ul>
            {{/if}}
        </div>
    </div>
    {{/each}}

</div>

