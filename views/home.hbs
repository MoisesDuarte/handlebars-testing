{{!-- <div class="card-deck"> --}}
    <div class="card" style="width: 18rem;">
        <!-- Card Heading -->
        <img src="{{post.image}}" class="card-img-top">

        <div class="card-body">
            <!-- Card Text -->
            <h5 class="card-title">{{post.name}}</h5>
            <p class="card-text">{{post.description}}</p>

            <!-- Comments Listing-->
            {{#if post.comments}} <!-- check if comment array is not null (true) -->
            <ul class="list-group">
                <li class="list-group-item">{{post.comments}}</li>
            </ul>
            {{else}}
            <ul class="list-group">
                <li class="list-group-item">Be the first one to comment!</li>
            </ul>
            {{/if}}
        </div>
    </div>
{{!-- </div> --}}

